  <script>
    function signout() {
      var auth2 = gapi.auth2.getAuthInstance();
      auth2.signOut().then(function () {
        let prom = new Promise((res, rej) => {
          $.ajax({
            url: "/api/users/logout",
            success: () => {
              res()
            }
          })
        })

        prom.then(() => location.reload())
      });
    }

    function onLoad() {
      gapi.load('auth2', function() {
        gapi.auth2.init();
      });
    }
  </script>
